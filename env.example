# Database
MONGODB_URI=mongodb+srv://<db_username>:<db_password>@cluster0.cm27w.mongodb.net/

# JWT Secrets (IMPORTANTE: Mude estas chaves em produção!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production-min-32-chars

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Product Price IDs (configure após criar produtos no Stripe)
STRIPE_PRO_PRICE_ID=price_pro_monthly_id
STRIPE_BUSINESS_PRICE_ID=price_business_monthly_id

